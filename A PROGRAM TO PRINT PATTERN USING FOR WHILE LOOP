
// CREATE A PROGRAM TO PRINT PATTERN USING FOR WHILE LOOP
// ****
// ***
// **
// *
class HelloWorld {
    public static void main(String[] args) {
        String s = "*";
      
        for(int j=4; j>0;j--){
            int i =1;
            while(i<j){
                
                System.out.print(s);
                 i++;
            }
                System.out.println(s);
            
        }
    }
}
